
{% extends '::layout/layoutAdmin.html.twig' %}

{% block body -%}
    <h1>Produits list</h1>

    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Nom</th>
                <th>Prix achat</th>
                <th>Prix Vente</th>
                <th>TVA</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in produits %}
            <tr>
                <td>{{ entity.libelle }}</td>
                <td>{{ entity.prixachat }}</td>
                <td>{{ entity.prixvente }}</td>
                <td>{{ entity.tva }}</td>

                <td>
                 {% if role == 1 or role == 0%}
                 		 <a href="{{ path('adminProduits_edit', { 'id': entity.id }) }}"><i class="icon-edit"></i></a>
                 {% endif %}
                    <a href="{{ path('adminProduits_show', { 'id': entity.id }) }}"><i class="icon-book"></i></a>
                   
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

       
        {% if role == 1 or role == 0%}
         <ul>
       		 <li>
                <a href="{{ path('adminProduits_new') }}">
                    Nouveau Produit
                </a>
              </li>
    	</ul>
        {% endif %}
     
    {% endblock %}
